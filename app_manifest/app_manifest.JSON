{
    "display_information": {
        "name": "Workshop Foundation",
        "description": "Set-up your Workshop straight from Slack.",
        "background_color": "#000000"
    },
    "features": {
        "bot_user": {
            "display_name": "Workshop Foundation",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/modal",
                "description": "Launches a modal form",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "channels:write",
                "channels:write.invites",
                "groups:write",
                "groups:write.invites",
                "im:write",
                "mpim:write",
                "mpim:write.invites",
                "users:read",
                "users:read.email",
                "bookmarks:write"
            ],
            "bot": [
                "bookmarks:write",
                "channels:history",
                "channels:manage",
                "channels:write.invites",
                "chat:write",
                "chat:write.public",
                "commands",
                "groups:history",
                "groups:write",
                "groups:write.invites",
                "im:history",
                "im:write",
                "mpim:history",
                "mpim:write",
                "mpim:write.invites",
                "users:read",
                "users:read.email"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}